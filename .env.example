# RAXE CE Environment Configuration
# Copy this file to .env and customize for your environment

# Environment
RAXE_ENV=development  # development, staging, production

# Logging
RAXE_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
RAXE_LOG_FORMAT=json  # json, console

# Local Storage
RAXE_DB_PATH=~/.raxe/dev.db  # SQLite database path
RAXE_CONFIG_PATH=~/.raxe/config.yaml  # Configuration file path
RAXE_DATA_DIR=~/.raxe/data  # Data directory

# Cloud API (Optional - for telemetry and cloud features)
RAXE_API_KEY=  # Your RAXE API key (leave empty for local-only mode)
RAXE_CLOUD_ENDPOINT=https://api.beta.raxe.ai  # Cloud API endpoint
RAXE_TELEMETRY_ENABLED=true  # Enable/disable telemetry

# Performance
RAXE_MAX_QUEUE_SIZE=10000  # Maximum events in queue
RAXE_BATCH_SIZE=50  # Events per batch
RAXE_BATCH_INTERVAL=5  # Seconds between batch sends
RAXE_CIRCUIT_BREAKER_THRESHOLD=5  # Failures before circuit opens
RAXE_CIRCUIT_BREAKER_TIMEOUT=30  # Seconds before retry

# Detection
RAXE_DETECTION_MODE=hybrid  # l1_only, l2_only, hybrid
RAXE_BLOCK_ON_HIGH=false  # Block requests on high severity detections
RAXE_FAIL_OPEN=true  # Allow requests if RAXE fails

# Development
RAXE_DEBUG=false  # Enable debug mode
RAXE_PROFILE=false  # Enable performance profiling
